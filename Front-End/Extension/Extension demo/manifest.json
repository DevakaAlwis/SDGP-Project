{
  "manifest_version": 3,
  "name": "ProRev Analyzer my copy",
  "description": "Product details and comparison tool",
  "version": "1.0",
  "permissions": ["storage","tabs"],
  "host permissions":["https://*.amazon.com/*"],
  "icons": {
    "16": "/images/logo-16.png",
    "32": "/images/logo-32.png",
    "48": "/images/logo-48.png",
    "128": "/images/logo-128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://*.amazon.com/*"],
      "js": ["scripts/content.js"]
    }
  ],

  "action": {
    "default_title": "Product Analysis",
    "default_popup": "error.html",
    "default_icon": {
      "16": "images/logo-16.png",
      "32": "images/logo-32.png",
      "48": "images/logo-48.png",
      "128": "images/logo-128.png"
    }
  }
}
